<div class="sticky-top">
  <!-- This method should_i_display_the_search_bar_background? is found in app/helpers/application_helper.rb -->
  <% if should_i_display_the_search_bar_background? == true %>
    <div class="navbar-height"></div>
  <% end %>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "BuddyUp.png", class:"logo" %>
    <% end %>

    <!-- This method should_i_display_the_search_bar? is found in app/helpers/application_helper.rb -->
    <% if should_i_display_the_search_bar? == true %>
      <%= simple_form_for :search, url: events_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <form class="form-inline my-2 my-lg-0">
        <%= f.input :location, label: false, input_html: {value: "" }, placeholder: "Location", class: "form-control mr-sm-2" %>
        <%= f.input :sport, input_html: { class: "recognitionStyling form-control mr-sm-2" }, prompt: "Sport", collection: ["Tennis", "Baseball", "Soccer", "Badminton", "Rugby", "Swimming", "Running", "Volleyball"], label: false %>
        <%= f.input :participant_date, as: :date, html5: true, label: false %>
        <%= f.input :participant_time, as: :time, html5: true, label: false %>
        <%= f.submit "Search", class: 'btn btn-outline-primary my-2 my-sm-0'%>
        </form>
      <% end %>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
            </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
