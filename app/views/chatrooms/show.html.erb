<div class="container">
  <h3>Buddy Chat #<%= @chatroom.name %></h3>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
       <div class="container20" id="message-<%= message.id %>">
         <%= cl_image_tag message.user.photo.key %>
         <span class="time-left"><small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small></span>
         <br>
         <span><%= message.user.nickname %>:</span>
         <p><%= message.content %></p>
      </div>
    <% end %>
   </div>
    <div class="chat-message">
       <%= simple_form_for([ @chatroom, @message ], html: { class: 'd-flex' }, remote: true) do |f| %>
          <%= f.input :content, label: false, placeholder: "Text you buddy...", input_html: { class: 'class1' }%>
          <%= f.submit "Send message", class: "chat-submit"%>
    </div>
  <% end %>
  </div>


