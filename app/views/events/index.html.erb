<div class ="container-fluid">
  <div class="main-container">
    <!-- <div class="container"> -->
    <div class="row">
      <div class="col-6">
        <div class="cards">
        <% @events.each do |event| %>
          <div class="card-product">
            <img src="https://images.unsplash.com/photo-1558898479-33c0057a5d12?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60"/>
            <div class="card-product-infos">
              <h2><strong><%= event.organizer.first_name %> <%= event.organizer.last_name %></strong></h2>
              <p><strong><%= event.sport %></strong></p>
              <% if event.organizer.skill_level %>
              <p><strong>Skill Level:</strong> <% event.organizer.skill_level.times do %>
                 <span class="fa fa-star checked"></span>
              <% end %>
              <% end %>
              <p><%= event.start_time %></p>
              <p><%= event.address %></p>
              <div class="text-right">
                <%= link_to "Select Buddy", event_path(event), class: "btn btn-ghost"%>
              </div>
<!--               <div class="more-info">
                  <span>Group Name</span>
                  <span>Joined January 2019</span>
              </div> -->
            </div>
              <%= link_to "", event_path(event), class: "cards-link"%>
          </div>
        <% end %>

        </div>
      </div>


      <div class="col-6 nopadding">
        <div id="map"
             style="width: 100%; height: 100vh;"
             data-markers="<%= @markers.to_json %>"
             data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
