<div class="container20" id="message-<%= message.id %>">
           <%= cl_image_tag message.user.photo.key %>
           <span class="time-left"><small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small></span>
           <br>
           <span><%= message.user.nickname %>:</span>
           <p><%= message.content %></p>
</div>
