  <div class="main-dashboard-container">
  <br>


  <ul class="nav nav-pills mb-3 d-flex justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Profile</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Buddy Space</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Organizer Space</a>
    </li>
  </ul>
  <div class="tab-content d-flex justify-content-center" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="card-container">
        <!-- <span class="pro">You</span> -->
        <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo.key, class: "round"%>
        <% else %>
        <img class="round" src="https://randomuser.me/api/portraits/women/79.jpg" alt="user" />
        <% end %>
        <br>
        <br>
        <h4><%= current_user.first_name %> <%= current_user.last_name %></h4>
        <div class="profile-details">
          <p>E-mail: <%= current_user.email %></p>
          <p>Gender: <%= current_user.gender %></p>
          <p>Age: <%= current_user.age %></p></p>
          <p>Main Language: <%= current_user.language %></p>
          <p>Favourite Sport: <%= current_user.favorite_sport %></p>
          <p>Skill level: <%= current_user.skill_level %></p>
          <p>Description: <%= current_user.description %></p>
        </div>
          <button class="btn btn-outline-primary my-2 my-sm-0">
            Edit profile
          </button>
        </div>
      </div>




    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
       <br>
      <div class="cards">
    <% @my_bookings.each do |my_booking| %>
      <div class="card-product">
        <img src="https://images.unsplash.com/photo-1554068865-24cecd4e34b8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60"/>
        <div class="card-product-infos">
           <h2><strong><%= my_booking.event.sport %></strong>
           <%= link_to content_tag(:i, nil, class: 'fas fa-window-close'), booking_path(my_booking), method: :delete, data: {confirm: 'Are you sure you no longer want to participate to this event?'}%>
            <a href="<%=chatroom_path(my_booking)%>"><i class="far fa-comment-dots"></i></a>
           </h2>
           <p> Start time: <%= my_booking.event.start_time %> </p>
           <p> End time: <%= my_booking.event.end_time %> </p>
           <p> Address: <%= my_booking.event.address %> </p>
           <p> Organizer: <%= my_booking.event.organizer.first_name %> <%= my_booking.event.organizer.last_name %> </p>
           <br>
           <div class="text-right">
             <%= link_to "See details", event_path(my_booking.event), class: "btn btn-ghost"%>
           </div>
        </div>
        </div>
      <% end %>
        </div>
    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      <%= link_to "Create", new_event_path , class: "btn btn-ghost" %>
       <div class="cards">
      <% @my_events.each do |my_event| %>
        <div class="card-product">
          <%= cl_image_tag my_event.photo.key, height: 150, width: 150, crop: :fill %>
          <div class="card-product-infos">
             <h2><strong><%= my_event.sport %></strong>
              <a href="<%=edit_event_path(my_event)%>"><i class="fas fa-edit"></i></a>
              <%= link_to content_tag(:i, nil, class: 'fas fa-trash'), event_path(my_event), method: :delete, data: {confirm: 'Are you sure you want to delete this event?'}%>
              <a href="<%=chatroom_path(my_event)%>"><i class="far fa-comment-dots"></i></a>
             </h2>
             <p> Start time: <%= my_event.start_time %>  </p>
             <p> End time: <%= my_event.end_time %>  </p>
             <p> Address: <%= my_event.address %> </p>
             <br>
             <div class="text-right">
               <%= link_to "See details", event_path(my_event), class: "btn btn-ghost"%>
             </div>
          </div>
          </div>
        <% end %>
          </div>
    </div>
  </div>
</div>





