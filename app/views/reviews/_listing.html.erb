              <% unless @event.reviews.count == 0 %>
                <h3 class="spacing" ><%= @event.reviews.count %> Reviews</h3>
                <!-- average rating -->
                <% sum = 0 %>
                <% total_reviews = @event.reviews.count %>
                <% @event.reviews.each do |review| %>
                  <% sum += review.rating %>
                <% end %>
                <% avg = (sum / total_reviews) %>
                <% stars = avg %>
                <div class="mb-4">
                  <% stars.times do %>
                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-star-fill text-warning stars" fill="rgb(94, 211, 255)" xmlns="http://www.w3.org/2000/svg">
                      <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                    </svg>
                  <%end%>
                </div>
              <% end %>

              <div class="col-12 review-design">
                <% if @event.reviews.count != 0 %>
                  <% @event.reviews.reverse.each do |review| %>
                    <ul style="list-style: none;">
                    <li class="review-card mt-3 mb-4 pb-4 d-flex justify-content-center">
                      <div class="review-content m-0 pl-4" style="width:20%" >
                        <!-- Reviewer avatar -->
                        <% if review.reviewer.photo.present? %>
                          <%= cl_image_tag review.reviewer.photo.key,  class: "review-avatar-events-tabs", width: "100%" %>
                        <% else %>
                          <%= image_tag "https://kitt.lewagon.com/placeholder/users/RicardoLuisAraujo", class: "review-avatar-events-tabs", width: "100%" %>
                        <% end %>
                      </div>
                      <div class="col-4 align-self-center">
                        <!-- Review Rating content-->
                        <small>
                          <div>
                            <div>
                              <!-- Reviewer name -->
                              <%= review.reviewer.first_name  %>
                            </div>
                            <div>
                            <!-- Review Date -->
                              <%= Time.new.strftime("%B, %Y")%>
                            </div>
                          </div>
                          <!-- Review star rating -->
                          <% count = 0 %>
                          <% 5.times do %>
                            <% if review.rating > count %>
                            <!-- fills the star in -->
                              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill text-warning stars" fill="rgb(94, 211, 255)" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                              </svg>
                            <% else %>
                            <!-- empty star -->
                              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star" fill="rgb(94, 211, 255)" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.523-3.356c.329-.314.158-.888-.283-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767l-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288l1.847-3.658 1.846 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.564.564 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                              </svg>
                            <% end %>
                            <% count += 1 %>
                          <% end %>
                          <!-- Review text -->
                          <p class="mb-0"><%= review.text %></p>
                        </small>

                      </div>
                    </li>
                    </ul>
                  <% end %>
                <% else %>
                  <h3 class="mt-3" >No Reviews</h3>
                <% end %>
              </div>
