<div class="pt-5">
  <div class="card card-regist mx-auto">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-8">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>
            <h2 class="text-center mb-5">Account settings</h2>
            <div class="form-group">
               <%= f.input :email, required: true, autofocus: true %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>
            </div>
            <div class="form-group">
             <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-group">
               <%= f.input :password_confirmation,
                hint: "Again, leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="form-row">
              <div class="col-6 form-group">
                <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }%>
              </div>
              <div class="col-6 form-group">
                     <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last_name" }%>
              </div>
              <div class="col-6 form-group">
                     <%= f.input :nickname,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "nickname" }%>
              </div>
            </div>
            <div class="form-row">
              <div class="col-6 form-group">
                <%= f.input :favorite_sport, input_html: { class: "recognitionStyling form-control mr-sm-2" }, prompt: "Favorite Sport", collection: ["Tennis", "Baseball", "Soccer", "Badminton", "Rugby", "Swimming", "Running", "Volleyball"], label: "Sport" %>
              </div>
               <div class="col-6 form-group">
                <%= f.input :skill_level, input_html: { class: "recognitionStyling form-control mr-sm-2" }, prompt: "Skill Level", collection: (1..5), label: "Skill-Level" %>
              </div>
            </div>
            <div class="form-row">
              <div class="col-4 form-group">
                   <%= f.input :age,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "age" } %>
              </div>
              <div class="col-4 form-group">
 <%= f.input :gender, input_html: { class: "recognitionStyling form-control mr-sm-2" }, prompt: "Gender", collection: ["Male", "Female"], label: "Gender" %>
              </div>
              <div class="col-4 form-group">
<%= f.input :language, input_html: { class: "recognitionStyling form-control mr-sm-2" }, prompt: "Language", collection: ["French", "English", "German", "Portugese", "Spanish"], label: "Language" %>
              </div>
            </div>
              <div class="form-group">
                  <%= f.input :description,
                  required: true,
                  autofocus: true,
                  as: :text,
                  hint: ("360 characters maximum"),
                  input_html: { autocomplete: "description", rows: 3, class: "form-control", maxlength: 360 }%>
              </div>
             <div class="form-group">
              <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
            </div>
            <div class="form-actions">
            <%= f.button :submit, "Update", class: "btn btn-primary btn-lg w-100" %>
            </div>
            <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        </div>
      </div>
    </div>
    </div>
<%end%>



