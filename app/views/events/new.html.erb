<div class="pt-5">
  <div class="card card-regist mx-auto">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-8">
          <%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
            <h2 class="text-center mb-5">Create a new event</h2>
            <div class="form-group">
              <%= f.input :sport,
                required: true,
                autofocus: true,
                collection: ["Tennis", "Baseball", "Soccer", "Badminton", "Rugby", "Swimming", "Running", "Volleyball"]%>
            </div>
            <div class="form-group">
              <%= f.input :start_time,
                as: :datetime,
                required: true,
                autofocus: true,
                html5: true, input_html: { type: "datetime-local" }, label: "From"
                %>
            </div>
            <div class="form-group">
              <%= f.input :end_time,
                as: :datetime,
                required: true,
                autofocus: true,
                html5: true, input_html: { type: "datetime-local" }, label: "Until" %>
            </div>
            <div class="form-group">
              <%= f.input :location,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "location" }%>
            </div>
            <div class="form-group">
              <%= f.input :address,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "address" }%>
            </div>
            <div class="form-group">
              <%= f.input :photo, as: :file,
                required: true,
                autofocus: true %>
            </div>
            <div class="form-actions">
            <%= f.button :submit, "Create", class: "btn btn-primary btn-lg w-100" %>
            </div>
        </div>
      </div>
    </div>
    </div>
<%end%>

