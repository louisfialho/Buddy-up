<div class="show-container">

<div class="info">


  <div class="row">
    <div class="col-sm-6">
      <div class="card mb-3" style="max-width: 30rem;">
        <div class="card-body">
           <div>
            <h5 class="card-title"><strong><%=@event.organizer.first_name %> <%= @event.organizer.last_name %></strong></h5>
            <p>
            <p class="card-text">Gender: <%=@event.organizer.gender %></p>
            <p class="card-text">Age: <%=@event.organizer.age %> years old</p>
            <p class="card-text">Main Language: <%=@event.organizer.language%></p>
            <p class="card-text">Favourite Sport: <%=@event.organizer.favorite_sport%></p>
            <p class="card-text">Skill level: <%=@event.organizer.skill_level %></p>
            </div>
            <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm">
         </div>
      </div>
    </div>

<div class="booking col-sm-6">


  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-8 text-center">

        <div class="form-container">

        <p class="prompt"> Book this event! </p>

        <div id="information">
          <div id="date-time">
            <p><%= @event.start_time %></p>
          </div>
          <div id="sport">
            <p><%= @event.sport %></p>
          </div>
        </div>


          <div class="flex-between" id="participants">
            Participants:
            <div class="actions">
              <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
              <span id="counter" data-count="1">1</span>
              <a href="#" onsubmit="return false;" class="btn round-bordered incrementer" id="plus" data-offset="1">+</a>
            </div>
          </div>

          <%= simple_form_for [@event, @booking] do |f| %>
            <%= f.submit "Book event", class:"btn-primary" %>
          <% end %>

        </div>

      </div>
    </div>
  </div>

</div>


  <div class="row">
    <div class="col-sm-6">
      <div class="card mb-3" style="max-width: 30rem;">
        <div class="card-body1">
          <h5 class="card-title"><strong>Biography</strong></h5>
          <p>
          <p class="card-text"><%=@event.organizer.description %></p>
        </div>
      </div>

      <div class="card mb-3" style="max-width: 30rem;">
          <div class="card-body1">
            <h5 class="card-title"><strong>Active History</strong></h5>
            <p>
            <p class="card-text"><%=@event.organizer.description %></p>
          </div>
      </div>

      <!-- reviews -->

      <!-- review form visible to only participants who have booked onto the event-->
        <% if @event.bookings.where(participant_id: current_user.id).first.present? && (current_user.id ==   @event.bookings.where(participant_id: current_user.id).first.participant.id)  %>
          <%= simple_form_for([@event, @review], remote: true) do |f| %>
            <%= f.input :rating, collection: 0..5, label: "Leave a Rating"%>
            <%= f.input :text, label:"Leave a Review" %>
            <%= f.submit class: 'btn btn-primary' %>
          <% end %>
        <% end %>

      <div class="card mt-5">
      <!-- average rating -->
      <div>
        <% if @event.reviews.count != 0 %>
          <% sum = 0 %>
          <% total_reviews = @event.reviews.count %>
            <% @event.reviews.each do |review| %>
              <% sum += review.rating %>
            <% end %>
            <% avg = (sum / total_reviews) %>
            <% stars = avg %>
            <span>Average Rating</span>
            <% stars.times do %>
              <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-star-fill text-warning stars" fill="rgb(251, 130, 130)" xmlns="http://www.w3.org/2000/svg">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
              </svg>
            <%end%>
            <% if stars > 4%>
            <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-award-fill" style = "color: #1ED785" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 0l1.669.864 1.858.282.842 1.68 1.337 1.32L13.4 6l.306 1.854-1.337 1.32-.842 1.68-1.858.282L8 12l-1.669-.864-1.858-.282-.842-1.68-1.337-1.32L2.6 6l-.306-1.854 1.337-1.32.842-1.68L6.331.864 8 0z"/>
              <path d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z"/>
            </svg>
            <%end%>
        <% end %>
      </div>


      <!-- list the reviews -->
      <div  id="anchor" class='list-group thin-border-top mt-0 mb-3'>
        <% if @event.reviews.count != 0 %>
          <h3 class="mt-5" ><%= @event.reviews.count %> Reviews</h3>
          <% @event.reviews.reverse.each do |review| %>
            <li class="review-card list-group-item mt-3">
              <div class="review-content mt-3">
                <!-- Reviewer avatar -->
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/RicardoLuisAraujo", class: "review-avatar" %>
                <!-- Reviewer name -->
                <div class="pl-2">
                  <div>
                    <%= review.reviewer.first_name  %>
                  </div>
                  <div>
                  <!-- Review Date -->
                   <%= Time.new.strftime("%B, %Y")%>
                  </div>
                </div>
              </div>


                <!-- Review Rating -->
                <small>
                  <% count = 0 %>
                  <% 5.times do %>
                    <% if review.rating > count %>
                    <!-- fills the star in -->
                      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill text-warning stars" fill="rgb(251, 130, 130)" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                      </svg>
                    <% else %>
                    <!-- empty star -->
                      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star" fill="rgb(251, 130, 130)" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.523-3.356c.329-.314.158-.888-.283-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767l-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288l1.847-3.658 1.846 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.564.564 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                      </svg>
                    <% end %>
                    <% count += 1 %>
                  <% end %>
                </small>
                <!-- Review text -->
                <p><%= review.text %></p>
            </li>
          <% end %>
        <% else %>
          <h3 class="mt-3" >No Reviews</h3>
        <% end %>
      </div>


    </div>

    </div>
  </div>



</div>

</div>




